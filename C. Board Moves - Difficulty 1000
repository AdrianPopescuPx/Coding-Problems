#include <bits/stdc++.h>
using namespace std;
// ifstream cin ("pbinfo.in");
// ofstream cout ("pbinfo.out");
#define FastEverything  ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define HighPrecision cout<<fixed<<setprecision(17);
 
/*
[#]=============================================================[#]
		 ___    ____              ____          ___ _
		|_ _|  / ___|__ _ _ __   |  _ \  ___   |_ _| |_
		 | |  | |   / _` | '_ \  | | | |/ _ \   | || __|
		 | |  | |__| (_| | | | | | |_| | (_) |  | || |_
		|___|  \____\__,_|_| |_| |____/ \___/  |___|\__|
					 it's just about time
 
[#]=============================================================[#]
*/
 
 
int main()
{   FastEverything
    HighPrecision
    
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        long long sum = 0;
        long long p = 8;
        for (int i = 1; i <= n / 2; ++i) {
            sum += p * i;
            p += 8;
        }
        cout << sum << endl;
    }
 
    return 0;   
}
