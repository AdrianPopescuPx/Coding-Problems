#include <bits/stdc++.h>
using namespace std;
#define FastEverything  ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define HighPrecision cout<<fixed<<setprecision(17);
 

int main () {   
    
    FastEverything
    HighPrecision
    
    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        int s1 = 0, s2 = 0;
        for (int i = 0 ; i <= 2; ++i) {
            s1 += (s[i] - '0');
        }
        for (int i = 3 ; i < s.size(); ++i) {
            s2 += (s[i] - '0');
        }
        if (s1 == s2) {
            cout << "YES" << '\n';
        }   else {
            cout << "NO" << '\n';
        }
    }
    return 0;

}


